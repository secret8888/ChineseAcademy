<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/AnimSlide</item>
    </style>

    <style name="AnimSlide" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <style name="DialogLoadingTheme" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_refresh_view</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="tab_rb_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/text_dark_gray</item>
        <item name="android:textSize">@dimen/ts_11</item>
        <item name="android:paddingBottom">@dimen/academy_space_tiny</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_gravity">bottom</item>
        <!-- <item name="android:background" >@drawable/tab_checked_bg</item>  -->
    </style>

    <style name="NormalLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainFunctionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainFunctionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textSize">@dimen/ts_14</item>
    </style>

    <style name="ArticleDetailText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/academy_space_large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/ts_15</item>
    </style>

    <style name="DividerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/bg_gray</item>
    </style>

    <style name="MineItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="MineTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/text_dark_gray</item>
    </style>

    <style name="MineContentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">85dp</item>
    </style>

    <style name="MineModifyText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingLeft">@dimen/academy_space_normal</item>
        <item name="android:paddingRight">@dimen/academy_space_normal</item>
        <item name="android:paddingTop">@dimen/academy_space_tiny</item>
        <item name="android:paddingBottom">@dimen/academy_space_tiny</item>
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:background">@drawable/bg_modify</item>
        <item name="android:text">@string/modify</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ProfileArrowStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/academy_space_normal</item>
        <item name="android:background">@drawable/ic_arrow</item>
    </style>
</resources>
