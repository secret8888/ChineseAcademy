<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/academy_title_height"
    android:background="@color/text_blue">

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/academy_title_height"
        android:drawableLeft="@drawable/ic_back"
        android:paddingLeft="@dimen/academy_space_medium"
        android:paddingRight="@dimen/academy_space_medium"
        android:drawablePadding="@dimen/academy_space_middle"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_15"
        android:gravity="center"
        android:text="@string/back"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:singleLine="true"
        android:layout_marginLeft="130dp"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_19" />
</RelativeLayout>